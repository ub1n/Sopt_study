<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="210dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        card_view:cardCornerRadius="7dp">

        <ImageView
            android:id="@+id/sample_image"
            android:layout_width="150dp"
            android:layout_height="210dp"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/sample_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/sample_image"
            android:layout_alignTop="@+id/sample_image"
            android:layout_alignRight="@+id/sample_image"
            android:layout_alignBottom="@+id/sample_image"
            android:layout_margin="1dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingTop="180dp"
            android:text="Hell"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/sample_arrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/sample_image"
            android:layout_alignTop="@+id/sample_image"
            android:layout_alignRight="@+id/sample_image"
            android:layout_alignBottom="@+id/sample_image"
            android:layout_margin="1dp"
            android:gravity="center|right"
            android:paddingTop="90dp"
            android:paddingRight="10dp"
            android:text=">"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sample_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/sample_image"
            android:layout_alignTop="@+id/sample_image"
            android:layout_alignRight="@+id/sample_image"
            android:layout_alignBottom="@+id/sample_image"
            android:layout_margin="1dp"
            android:fontFamily="bold"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingTop="150dp"
            android:text="Hello"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>