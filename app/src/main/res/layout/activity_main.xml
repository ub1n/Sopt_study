<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/textView"
        android:background="@drawable/logo_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:text="Sopt"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="68dp"
        android:fontFamily="sans-serif"
        android:textColor="#000000"
        android:gravity="center_horizontal"
        android:text="아이디"
        android:textStyle="bold"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/id_edit"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:paddingLeft="16dp"
        android:ems="10"

        android:background="@drawable/login_selected"
        android:hint="아이디를 입력해주세요"
        android:inputType="textPersonName"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="sans-serif"
        android:textColor="#000000"
        android:gravity="center_horizontal"
        android:text="비밀번호"
        android:textStyle="bold"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/id_check"
        app:layout_constraintTop_toBottomOf="@+id/id_check" />

    <EditText
        android:id="@+id/pw_edit"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:paddingLeft="16dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:background="@drawable/login_selected"
        android:hint="비밀번호를 입력해주세요"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/id_edit"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:background="@drawable/login_btn"
        android:textSize="18dp"
        android:textColor="#FFD500"
        android:text="LOGIN"
        app:layout_constraintEnd_toEndOf="@+id/pw_edit"
        app:layout_constraintStart_toStartOf="@+id/pw_edit"
        app:layout_constraintTop_toBottomOf="@+id/login_check" />

    <CheckBox
        android:id="@+id/id_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="아이디 저장"
        app:layout_constraintStart_toStartOf="@+id/id_edit"
        app:layout_constraintTop_toBottomOf="@+id/id_edit" />

    <CheckBox
        android:id="@+id/pw_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="비밀번호 저장"
        app:layout_constraintStart_toStartOf="@+id/pw_edit"
        app:layout_constraintTop_toBottomOf="@+id/pw_edit" />

    <CheckBox
        android:id="@+id/login_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="자동로그인"
        app:layout_constraintStart_toStartOf="@+id/pw_check"
        app:layout_constraintTop_toBottomOf="@+id/pw_check" />

    <TextView
        android:id="@+id/reg_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:textStyle="bold"
        android:textSize="12dp"
        android:text="회원가입 하러가기"
        app:layout_constraintEnd_toEndOf="@+id/login_button"
        app:layout_constraintStart_toStartOf="@+id/login_button"
        app:layout_constraintTop_toBottomOf="@+id/login_button" />
</androidx.constraintlayout.widget.ConstraintLayout>